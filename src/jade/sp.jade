doctype html
html(lang="ja")
  head
    include partials/_variables
    include partials/_meta
    
    //- link(rel="stylesheet" href="./css/main.css")
    style.
      * {
        margin: 0;
        padding: 0;
        border: 0;
      }
      body {
        background: #ddd;
        font-size: 20px;
        font-family: Futura, sans-serif;
      }
      .container {
          height: 250px;
          margin: 1em;
          background-color: #eee;
          position: relative;
      }
      .dot {
          width: 10px;
          height: 10px;
          background-color: #ffcc66;
          border: solid 1px #000;
          margin: auto;
          position: absolute;
          top: 0;
          left: 0;
          right: 0;
          bottom: 0;
      }
    
    script(src="https://cdn.socket.io/socket.io-1.3.7.js")
    
    script(src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.0/jquery.min.js")
    
    script(src="/js/Util.js")
    script(src="/js/sp.js")
    
  body.sp
    div.wrapper
      h1 sp
      
      p.konsole
      
      div.container
        div.dot

