doctype html
html(lang="ja")
  head
    include partials/_variables
    include partials/_meta
    
    //- link(rel="stylesheet" href="./css/main.css")
    //- link(rel="stylesheet" href="./css/sp/main.css")
    style.
      * {
        margin: 0;
        padding: 0;
        border: 0;
      }
      body {
        background: #ddd;
        font-size: 20px;
        font-family: Futura, sans-serif;
      }
      h1 {
          position: relative;
          z-index: 1;
          margin: 10px;
      }
      .container {
          height: 250px;
          margin: 1em;
          background-color: #eee;
          position: relative;
      }
      .dot {
          width: 10px;
          height: 10px;
          background-color: #ffcc66;
          border: solid 1px #000;
          margin: auto;
          position: absolute;
          top: 0;
          left: 0;
          right: 0;
          bottom: 0;
      }
      canvas {
          background-color: #eee;
          position: absolute;
          margin: 10px;
          top: 0;
      }
    
    
    script(src="https://cdn.socket.io/socket.io-1.3.7.js")
    
    script(src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.0/jquery.min.js")
    //- script(src="./js/lib/jquery.easing.1.3.js")
    //- script(src="./js/lib/jquery.transform2d.js")
    
    script(src="./js/Util.js")
    script(src="./js/main.js")
    
  body
    //- include partials/_ua
    //- +ua("App")
    
    div.wrapper
      h1 pc
      
      p.konsole
      
      //- div.container
        div.dot
      
      canvas#cnvs(width="400" height="400")

