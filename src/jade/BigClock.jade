doctype html
html(lang="ja")
  head
    include partials/_variables
    include partials/_meta
    
    link(rel="stylesheet" href="/css/main.css")
    style.
      html, body {
        height: 100%;
      }
      body {
        font-family: $MAIN_FONT;
        background-color: #000;
        color: #fff;
      }
      body * {
        box-sizing: border-box;
      }
      .wrapper {
        height: 100%;
        position: relative;
      }
      .clock {
        text-align: center;
        font-size: 380px;
        height: 380px;
        margin: auto;
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
      }
      .date {
        position: absolute;
        right: 0;
        bottom: 0;
        padding: 5px;
        font-size: 30px;
      }
      
    script(src="https://cdn.socket.io/socket.io-1.3.7.js")
    script(src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.0/jquery.min.js")
    script(src="/js/Util.js")
    script(src="/js/main.js")
    script.
      (function(win, doc){
        var ns = win.App = win.App || {};
        var INTERVAL = 500;
        var $clock, $date;
        var dayChara = ["SUN", "MON", "TUE", "WED", "THU", "FRI", "SAT"];
        window.onload = function(){
          $clock = document.querySelector(".clock");
          $date = document.querySelector(".date");
          setInterval(function(){
            printTime();
          }, INTERVAL);
          printTime();
          printDate();
        };
        function printTime(){
          var now = new Date();
          var hour = ("0" + now.getHours()).slice(-2);
          var min = ("0" + now.getMinutes()).slice(-2);
          var sec = ("0" + now.getSeconds()).slice(-2);
          $clock.innerText = hour+":"+min+":"+sec;
          if (hour === "00") printDate();
        }
        function printDate(){
          var now = new Date();
          var year = now.getFullYear();
          var month = ("0" + (now.getMonth()+1)).slice(-2);
          var date = ("0" + now.getDate()).slice(-2);
          var day = now.getDay();
          $date.innerText = year+"."+month+"."+date+" "+dayChara[day];
        }
      })(this, document);
      
  body
    div.wrapper
      p.clock
      p.date

      canvas#cnvs(width="400" height="400")
      
